extends layout.pug

block content 
  link(rel='stylesheet', href='/stylesheets/search.css')
  body
    header
      .mobile-header
        button.nav-menu-button
          i.fas.fa-bars.fa-lg
        a.logo(href='../../')
          i.fas.fa-globe-africa
          h1 Jupiter Search
      form(method='GET', action='./search')
        .searchbox
          input(type='text', placeholder='Search...', value=value, name='q' disabled=disabled, required=true)
          button(type='submit')
            i.fas.fa-search
        if showOptions
          .options
            input(type='checkbox' name='partial')
            label(for='partial') Partial Search
            input(type='checkbox' name='caseinsensitive')
            label(for='caseinsensitive') Case Insensitive 
      p#phase-number #{phase}
    main#result-container
      block links
    if showImport
      include import.pug
    if scriptLocation
      script(src=scriptLocation)