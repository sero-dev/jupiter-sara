doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title=title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    meta(name='description', content='Search engine that uses multiple ways for displaying search results')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' integrity='sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr', crossorigin='anonymous')
    link(href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,700', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/main.css')
  body
    header
      button.nav-menu-button
        i.fas.fa-bars.fa-lg
      .title
        a.logo(href='../')
          i.fas.fa-globe-africa
        h1 Jupiter Search
        p The Search of the Future
      form#search-form(method='GET', action=search)
        .searchbox
          input(type='text', placeholder='Search...', value=value, disabled=disabled, name='q' required=true)
          button(type='submit')
            i.fas.fa-search
        if showOptions
          .options
            input(type='checkbox' name='partial')
            label(for='partial') Partial Search
            input(type='checkbox' name='caseinsensitive')
            label(for='caseinsensitive') Case Insensitive 
            
      nav
        ul
          li Course
            ul.dropdown
              li
                a(href='https://www.zybooks.com/')
                  h3 Zybooks
                  p Replace your textbook with an interactive zyBook. Proven to drive success and save instructors time with auto-generated, auto-graded textbook replacements.
              li
                a(href='')
                  h3 Course 2
                  p Lorem ipsum dolor sit amet, consectetur adipisicing elit. In, similique.
              li
                a(href='')
                  h3 Course 3
                  p Lorem ipsum dolor sit amet, consectetur adipisicing elit. In, similique.
              li
                a(href='')
                  h3 Course 4
                  p Lorem ipsum dolor sit amet, consectetur adipisicing elit. In, similique.
          li Search
            ul.dropdown
              li
                a#phaseTwo(href='/')
                  h3 Phase Two: Fixed List
                  p Display hard-coded search results about a topic of your choice.
              li
                a#phaseThree(href='/v3')
                  h3 Phase Three: From File
                  p Display search results read from files stored in CSV, JSON, and XML formats.
              li
                a#phaseFour(href='/v4')
                  h3 Phase Four: Google API
                  p Display search results obtained from using the Google Search API.
              li
                a#phaseFive(href='/v5')
                  h3 Phase Five: Our Search Engine
                  p Display search results from your own search engine which indexes the entire content of webpages.
          li Browser
            ul.dropdown
              li
                a
                  h3 Navigator
                  p#navigator
              li
                a
                  h3 Window
                  p#window
              li
                a
                  h3 Screen
                  p#screen
              li
                a
                  h3 Location
                  p#location
              li
                a
                  h3 Geolocation
                  p#geolocation
          li About
            ul.dropdown
              li
                a(href='https://jupitersearch.typeform.com/to/LOp3Cb')
                  h3 Contact Us
                  p For anyone questions or concerns, please let us know so we can work with you.
              li
                a(href='https://serodev.com')
                  h3 Sean Rodriguez
                  p A software engineer who likes to develop front-end, back-end, and utility software.
      p#phase-number #{phase}
      a(href="./admin/") 
        i.fas.fa-tools.fa-2x
    script(src='../javascripts/index.js')